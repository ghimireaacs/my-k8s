apiVersion: v1
kind: ConfigMap
metadata:
  name: searxng-config
  namespace: personal
data:
  settings.yml: |
    use_default_settings: true

    server:
      bind_address: "0.0.0.0"
      port: 8080
      secret_key: "REPLACE_ME_WITH_RANDOM_VALUE"
      limiter: true
      image_proxy: true

    valkey:
      url: redis://valkey:6379/0

  limiter.toml: |
    [botdetection]
    enabled = true
